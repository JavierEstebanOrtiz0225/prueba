{
    "env": {
        "es6": true,
        "node": true
    },
    "ecmaFeatures": {
        "jsx": true,
        "modules": true,
        "arrowFunctions": true,
        "classes": true,
        "spread": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 2018
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": 0,
        "no-unused-vars": ["error", {
            "argsIgnorePattern": "next"
        }],
        "require-atomic-updates": 0
    }
}